<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SlidingPaneLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:gravity="top"
    app:umanoDragView="@+id/listlayout"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/backlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        >

        <Button
            android:id="@+id/a1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="1"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@drawable/btncolor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/a0"
            android:layout_margin="10dp"
            tools:ignore="MissingConstraints" />
        <Button
            android:id="@+id/a2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="2"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@drawable/btncolor"
            app:layout_constraintStart_toEndOf="@+id/a1"
            app:layout_constraintBottom_toTopOf="@+id/a0"
            android:layout_margin="10dp"
            tools:ignore="MissingConstraints" />
        <Button
            android:id="@+id/a3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="3"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@drawable/btncolor"
            app:layout_constraintStart_toEndOf="@+id/a2"
            app:layout_constraintBottom_toTopOf="@+id/a0"
            android:layout_margin="10dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/a4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:text="4"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@drawable/btncolor"
            app:layout_constraintBottom_toTopOf="@+id/a1"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/a5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="5"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@drawable/btncolor"
            app:layout_constraintBottom_toTopOf="@+id/a2"
            app:layout_constraintStart_toEndOf="@+id/a4"
            android:layout_margin="10dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/a6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="6"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@drawable/btncolor"
            app:layout_constraintBottom_toTopOf="@+id/a3"
            app:layout_constraintStart_toEndOf="@+id/a5"
            android:layout_margin="10dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/a7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:text="7"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@drawable/btncolor"
            app:layout_constraintBottom_toTopOf="@+id/a4"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/a8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:background="@drawable/btncolor"
            android:text="8"
            android:textColor="#fff"
            android:textSize="40dp"
            app:layout_constraintBottom_toTopOf="@+id/a5"
            app:layout_constraintStart_toEndOf="@+id/a7"
            tools:ignore="MissingConstraints" />
        <Button
            android:id="@+id/a9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="9"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@drawable/btncolor"
            app:layout_constraintStart_toEndOf="@+id/a8"
            app:layout_constraintBottom_toTopOf="@+id/a6"
            android:layout_margin="10dp"
            tools:ignore="MissingConstraints" />
        <Button
            android:id="@+id/percent"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="%"
            android:textSize="35dp"
            android:textColor="#fff"
            android:background="@drawable/btncolor"
            app:layout_constraintBottom_toTopOf="@id/a7"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            tools:ignore="MissingConstraints" />
        <Button
            android:id="@+id/ce"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="ce"
            android:textSize="20dp"
            android:textColor="#fff"
            android:background="@drawable/btncolor"
            app:layout_constraintBottom_toTopOf="@id/a9"
            app:layout_constraintStart_toEndOf="@id/c"
            android:layout_margin="10dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/c"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="20dp"
            android:text="c"
            android:textSize="35dp"
            android:textColor="#fff"
            android:background="@drawable/btncolor"
            app:layout_constraintBottom_toTopOf="@id/a8"
            app:layout_constraintStart_toEndOf="@id/percent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/a0"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:text="0"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@drawable/btncolor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="10dp"
            tools:ignore="MissingConstraints" />
        <Button
            android:id="@+id/dot"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="."
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@drawable/btncolor"
            app:layout_constraintStart_toEndOf="@+id/a0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="10dp"
            tools:ignore="MissingConstraints" />
        <Button
            android:id="@+id/equal"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:text="="
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@drawable/btncolor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="10dp"
            tools:ignore="MissingConstraints" />
        <Button
            android:id="@+id/plus"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:text="+"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@drawable/btncolor"
            app:layout_constraintBottom_toTopOf="@id/equal"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="10dp"
            tools:ignore="MissingConstraints" />
        <Button
            android:id="@+id/minus"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:text="-"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@drawable/btncolor"
            app:layout_constraintBottom_toTopOf="@id/plus"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="10dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/slash"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:layout_marginEnd="216dp"
            android:layout_marginBottom="172dp"
            android:text="รท"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@drawable/btncolor"
            app:layout_constraintBottom_toTopOf="@id/multiful"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/multiful"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:text="X"
            android:textSize="40dp"
            android:textColor="#fff"
            android:background="@drawable/btncolor"
            app:layout_constraintBottom_toTopOf="@id/minus"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="10dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/backSpace"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:text="BackSpace"
            android:textSize="19dp"
            android:textColor="#fff"
            android:background="@drawable/btncolor"
            app:layout_constraintBottom_toTopOf="@id/slash"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/output"
            android:layout_width="220dp"
            android:layout_height="70dp"
            android:textSize="20dp"
            android:textColor="#fff"
            app:layout_constraintBottom_toTopOf="@+id/c"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/input"
            android:layout_width="390dp"
            android:layout_height="70dp"
            android:textSize="20dp"
            android:textColor="#fff"
            app:layout_constraintBottom_toTopOf="@+id/output"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/check"
            android:layout_width="390dp"
            android:layout_height="70dp"
            android:textSize="20dp"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="440dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/answer"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:textSize="50dp"
            android:textAlignment="textEnd"
            android:textColor="#fff"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="100dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listlayout"
        android:background="#000"
        >
        <Button
            android:id="@+id/listBtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/btncolor"
            android:text="๋ฆฌ์คํธ ์ด๊ธฐ"
            android:textColor="#fff"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</android.support.v4.widget.SlidingPaneLayout>